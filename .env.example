# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_bot_client_id
GUILD_ID=your_discord_server_id

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Web App Configuration
# Base URL for the webapp (used for bot links)
WEBAPP_URL=http://localhost:3000

# Discord OAuth (for webapp authentication)
DISCORD_CLIENT_ID=your_oauth_client_id
DISCORD_CLIENT_SECRET=your_oauth_client_secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_-base64_32

# Railway Configuration (for bot deployment)
PORT=3000
RAILWAY_STATIC_URL=your_railway_url

# Vercel Configuration (for webapp deployment)
VERCEL_URL=your_vercel_url

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_DISCORD_AUTH=true
